@model Models.Movie;
@* https://bootswatch.com/slate/ *@
@{
    ViewData["Title"] = "Index";

}

<p>
    <a asp-controller="Movies" asp-action="Index">Back</a>
</p>
<form asp-controller="Movies" asp-action="SubmitAddNewMovie" method="post">

    <fieldset>
        <legend>Add new movie</legend>
        <div asp-validation-summary="All" class="form-group has-success">
            <label for="Name" class="form-label mt-4">Movie title</label>

            <input asp-for="Name" type="text" class="form-control" style="width:30%;" id="Name"
                 placeholder="Enter movie name" required>
        </div>
        <div class="form-group">
            <label for="ProducerName" class="form-label mt-4">Producer name</label>
            <input type="text" asp-for="ProducerName" class="form-control" style="width:30%;" id="ProducerName"
                placeholder="Producer name" required>

        </div>
        <div class="form-group" style="display:flex; width:30%;justify-content: center;">
            <button type="submit" class="btn btn-primary" style="margin: 10px;">Add</button>
        </div>
    </fieldset>

</form>
